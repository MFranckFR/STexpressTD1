<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Commentaire</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='css/main.css'>
    <script src='js/main.js'></script>
</head>
<body>
    <h1>Commentaires <%=username %></h1>

    <form action="commentaire" method="POST">
        <input type="hidden" name="username" value="<%=username %>"/>
        <input type="text" name="comment" width="25" placeholder="Un commentaire" value="" required/>
        <input type="submit" name="btn" value="Valider" />
    </form>

    <div class="commentaires">
        <ul>
            <% commentaires.forEach((commentaire, idx) =>{%>
                <li>
                    <span style="font-style:bold">[<%=commentaire.id %>]</span>
                   <span style="color:blue, font-size:8pt"> <%= commentaire.date %></span>
                   <span style="color:red;font-weight: bold;"> <%=commentaire.username %></span>
                    <span style="color:orange"><%= commentaire.text %></span>
                    <a href="commentaire/delete?id=<%=commentaire.id %>">Supprimer</a>
                </li>
           <% }) %>
            </ul>
    </div>
</body>
</html>